<mvc:View
    controllerName="com.smod.ux.todolist.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Page
        id="detailPage"
        title="{i18n>DETAIL_VIEW_TITLE}"
        showNavButton="true"
        titleAlignment="Center"
        navButtonPress=".onNavBack"
    >
        <content>
            <core:Fragment fragmentName="com.smod.ux.todolist.fragments.TodoItemsTable"/>
        </content>

        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button
                    text="Refresh"
                    icon="sap-icon://refresh"
                    type="Emphasized"
                    press=".onRefreshList"
                />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
